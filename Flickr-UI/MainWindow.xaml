<RibbonWindow x:Class="Flickr_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Flickr_UI"
        Title="MainWindow" WindowState="Maximized">
    <DockPanel>
        <Ribbon Title="Ribbon" DockPanel.Dock="Top">
            <RibbonTab Header="Local">
                <RibbonGroup Header="Initiallize" >
                    <RibbonButton  LargeImageSource="images/config.png" Content="Config"  />
                    <RibbonButton  LargeImageSource="images/load.png" Content="Load"  />
                </RibbonGroup>
                <RibbonGroup Header="Actions" >
                    <RibbonButton  LargeImageSource="images/duplicates.png" Content="Find Duplicates" Command="{Binding DuplicatesCommand}" />
                </RibbonGroup>

            </RibbonTab>

            <RibbonTab Header="Flicker">
                <RibbonGroup Header="Connect" >
                    <RibbonButton  LargeImageSource="images/flickr.png"  />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <Grid Name="MainGrid" DockPanel.Dock="Bottom">
            <DataGrid ItemsSource="{Binding DuplicateImageCollection}" AutoGenerateColumns="False" SelectionMode="Extended" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" />
                    <DataGridTextColumn Header="Destination" Binding="{Binding DestinationPath}" />
                    <DataGridTextColumn  Header="Count" Binding="{Binding ImgCount}"  />
                    <DataGridTemplateColumn Header="Action" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Move" Click="Move_Images" Command="local:StaticCommands.DoSomethingCommand" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <DataGrid Height="100" ItemsSource="{Binding ImageDetails}" >
                        </DataGrid>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </Grid>
    </DockPanel>
</RibbonWindow>
