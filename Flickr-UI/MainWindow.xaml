<RibbonWindow x:Class="Flickr_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Flickr_UI"
        Title="MainWindow" WindowState="Maximized">
    <DockPanel>
        <Ribbon Title="Ribbon" DockPanel.Dock="Top">
            <RibbonTab Header="Local">
                <RibbonGroup Header="Initiallize" >
                    <RibbonButton  Label="Configure" LargeImageSource="images/config.png"  Command="{Binding ConfigureCommand}"  CommandParameter="{Binding ElementName=MainGrid}"/>
                    <RibbonButton  Label="Load" LargeImageSource="images/load.png"   />
                </RibbonGroup>
                <RibbonGroup Header="Actions" >
                    <RibbonButton  LargeImageSource="images/duplicates.png" Label="Find Duplicates" Command="{Binding DuplicatesCommand}"  CommandParameter="{Binding ElementName=MainGrid}"/>
                </RibbonGroup>

            </RibbonTab>

            <RibbonTab Header="Flicker">
                <RibbonGroup Header="Connect" >
                    <RibbonButton  LargeImageSource="images/flickr.png"  Label="Connect"/>
                    <RibbonButton  LargeImageSource="images/upload.png" Label="Upload" Command="{Binding UploadCommand}"  CommandParameter="{Binding ElementName=MainGrid}"/>
                    <RibbonButton  LargeImageSource="images/upload.png" Label="Album Rename" Command="{Binding AlbumRenameCommand}"  CommandParameter="{Binding ElementName=MainGrid}"/>

                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <Grid Name="MainGrid" DockPanel.Dock="Bottom" Margin="10,10,10,10">
        </Grid>
    </DockPanel>
</RibbonWindow>
